<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:id="@+id/iv_url"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#EE00FF"
        app:layout_constraintTop_toTopOf="@id/iv_url"
        app:layout_constraintLeft_toRightOf="@id/iv_url"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_url"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        android:id="@+id/tv_desc"
        android:textColor="#FF0066"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_url"
        app:layout_constraintBottom_toBottomOf="@id/iv_url"
        android:layout_marginRight="20dp"
        android:id="@+id/iv_love"
        android:src="@drawable/ic_baseline_favorite_border_24"
        />
</androidx.constraintlayout.widget.ConstraintLayout>